@model JobPortal.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/lay.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h2>Chỉnh sửa Người dùng</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="EditUser" method="post" class="mt-3">
                <div class="form-group">
                    <label asp-for="UserName">Tên người dùng</label>
                    <input asp-for="UserName" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="NumberPhone">Số điện thoại</label>
                    <input asp-for="NumberPhone" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.NumberPhone, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="Role.RoleName">Vai trò</label>
                    <input asp-for="Role.RoleName" class="form-control" readonly />
                </div>

                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="@Url.Action("Users", "User", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
