@model JobPortal.Models.Jobs

@{
    ViewData["Title"] = "Create Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>Tạo Mới Công việc</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="CreateJob" enctype="multipart/form-data" method="post" id="jobPostForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Job Category -->
                <div class="form-group mb-3">
                    <label asp-for="JobCategoryId" class="form-label">Danh mục Công việc</label>
                    @Html.DropDownList("JobCategoryId", ViewBag.Categories as SelectList, "-- Chọn Danh mục --", new { @class = "form-select", required = "required" })
                    <span asp-validation-for="JobCategoryId" class="text-danger"></span>
                </div>

                <!-- Title -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- No of Post -->
                <div class="form-group mb-3">
                    <label asp-for="NoOfPost" class="form-label">Số lượng đăng tuyển</label>
                    <input asp-for="NoOfPost" class="form-control" />
                    <span asp-validation-for="NoOfPost" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Qualification -->
                <div class="form-group mb-3">
                    <label asp-for="Qualification" class="form-label">Bằng cấp</label>
                    <input asp-for="Qualification" class="form-control" />
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>

                <!-- Experience -->
                <div class="form-group mb-3">
                    <label asp-for="Experience" class="form-label">Kinh nghiệm</label>
                    <input asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>

                <!-- Specialization -->
                <div class="form-group mb-3">
                    <label asp-for="Specialization" class="form-label">Chuyên môn</label>
                    <input asp-for="Specialization" class="form-control" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <!-- Skill -->
                <div class="form-group mb-3">
                    <label asp-for="Skill" class="form-label">Kỹ năng</label>
                    <input asp-for="Skill" class="form-control" />
                    <span asp-validation-for="Skill" class="text-danger"></span>
                </div>

                <!-- Last Date to Apply -->
                <div class="form-group mb-3">
                    <label asp-for="LastDateToApply" class="form-label">Hạn chót nộp hồ sơ</label>
                    <input asp-for="LastDateToApply" type="date" class="form-control" />
                    <span asp-validation-for="LastDateToApply" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="form-group mb-3">
                    <label asp-for="Salary" class="form-label">Mức lương</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Job Type -->
                <div class="form-group mb-3">
                    <label asp-for="JobType" class="form-label">Loại công việc</label>
                    <select asp-for="JobType" class="form-select" required>
                        <option value="">-- Chọn loại công việc --</option>
                        <option value="Full Time">Toàn thời gian</option>
                        <option value="Part Time">Bán thời gian</option>
                        <option value="Remote">Làm việc từ xa</option>
                        <option value="Freelance">Tự do</option>
                    </select>
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>

                <!-- Company Image -->
                <div class="form-group mb-3">
                    <label asp-for="CompanyImage" class="form-label">Hình ảnh công ty</label>
                    <input asp-for="CompanyImage" type="file" class="form-control" name="imgFile"/>
                    <span asp-validation-for="CompanyImage" class="text-danger"></span>
                </div>

                <!-- City -->
                <div class="form-group mb-3">
                    <label asp-for="City" class="form-label">Thành phố</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <!-- State -->
                <div class="form-group mb-3">
                    <label asp-for="State" class="form-label">Tình trạng</label>
                    <select asp-for="State" class="form-select" required>
                        <option value="">-- Chọn tình trạng --</option>
                        <option value="Mới">Mới</option>
                        <option value="Đang mở">Đang mở</option>
                        <option value="Đã đóng">Đã đóng</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <!-- Country -->
                <div class="form-group mb-3">
                    <label asp-for="CountryId" class="form-label">Quốc gia</label>
                    @Html.DropDownList("CountryId", ViewBag.Country as SelectList, "-- Chọn Quốc gia --", new { @class = "form-select", required = "required" })
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Workmanagement" class="btn btn-secondary">Trở về danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('jobPostForm').addEventListener('submit', function (e) {
        var deadlineInput = document.getElementById('LastDateToApply');
        var deadline = new Date(deadlineInput.value);
        var now = new Date();

        if (deadline <= now) {
            e.preventDefault();
            alert('Thời gian hạn chót phải lớn hơn thời gian hiện tại.');
        }
    });
</script>