@model JobPortal.Models.RegistrationCandidate;

@{
    ViewData["Title"] = "Registration";
}
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>Chào mừng</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container pt-50 pb-40">
    <div class="row d-flex justify-content-center pt-5">
        <div class="col-12">
            <h1 class="contact-title text-center">Đăng ký làm ứng viên</h1>
        </div>
        <div class="col-lg-6">
            <form asp-action="Registration" class="form-contact contact_form" method="post" id="registrationForm">
                
                <div class="row">
                    <div class="col-12">
                        <h4>Chọn loại tài khoản</h4>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <a href="@Url.Action("RegistrationEmployer", "Account")" class="btn btn-primary btn-block">Đăng ký làm nhà tuyển dụng</a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <a href="@Url.Action("Registration", "Account")" class="btn btn-primary btn-block">Đăng ký làm ứng viên</a>
                        </div>
                    </div>
                    <div class="col-12">
                        <hr />
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-12">
                        <h4>Login Information</h4>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Tên tài khoản</label>
                            <input asp-for="Username" class="form-control" type="text" placeholder="Username" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input id="password" asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            <input id="confirmPassword" asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">
                                <i class="fa fa-eye" id="togglePasswordIcon"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-12">
                        <h4>Personal Information</h4>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input asp-for="FullName" class="form-control" type="text" placeholder="Full Name" required>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Address</label>
                            <input asp-for="Address" class="form-control" type="text" placeholder="Address" required>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="Phone Number" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3 text-center">
                    <button type="submit" class="button button-contactForm btn_4 boxed-btn">Sign Up</button>
                </div>
                <div class="text-center mb-3">
                    <span class="card-link">Already Registered? <a asp-action="Login">Click Here...</a></span>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("password");
        var confirmPasswordInput = document.getElementById("confirmPassword");
        var togglePasswordIcon = document.getElementById("togglePasswordIcon");
        var isPassword = passwordInput.type === "password";

        passwordInput.type = isPassword ? "text" : "password";
        confirmPasswordInput.type = isPassword ? "text" : "password";
        togglePasswordIcon.classList.toggle("fa-eye-slash", isPassword);
        togglePasswordIcon.classList.toggle("fa-eye", !isPassword);
    }
</script>



